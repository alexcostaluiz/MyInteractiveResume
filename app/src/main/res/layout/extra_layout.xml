<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/middle">

    <RelativeLayout
        android:id="@+id/extra_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/top"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/extra_quaternary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra"
                android:textAllCaps="true"
                android:textColor="#be7061"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="extra_quaternary_text" />

            <TextView
                android:id="@+id/extra_tertiary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra"
                android:textAllCaps="true"
                android:textColor="#febd92"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="extra_tertiary_text"
                android:translationX="2.5dp" />

            <TextView
                android:id="@+id/extra_secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/extra_quaternary_text"
                android:text="Curriculars"
                android:textAllCaps="true"
                android:textColor="#be7061"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="extra_secondary_text"
                android:translationX="-1dp"/>

            <TextView
                android:id="@+id/extra_primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/extra_tertiary_text"
                android:text="Curriculars"
                android:textAllCaps="true"
                android:textColor="#febd92"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="extra_primary_text"
                android:translationX="1.5dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/extra_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:src="@drawable/back_icon" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/extra_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/extra_toolbar">

        <LinearLayout
            android:id="@+id/extra_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/top"
                android:clipChildren="false"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/extra_sports_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textColor="@color/middle"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/tennis_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_championship" />

                <TextView
                    android:id="@+id/tennis_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/tennis_icon"
                    android:layout_below="@id/extra_sports_label"
                    android:paddingTop="4dp"
                    android:text="Tennis"
                    android:textColor="#EE505050"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tennis_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tennis_primary"
                    android:layout_below="@id/tennis_primary"
                    android:layout_marginEnd="8dp"
                    android:paddingBottom="8dp"
                    android:text="Tennis has been a part of me for my whole life. Starting at age six and still playing now, I have devoted countless hours into tennis. Independently, I have participated in and won many USTA tournaments. During my high school career, I have been on the Varsity tennis team since freshman year, and have been a starter since sophomore year. Our team consistently places top in the Regional Championship and, last season, finished as finalists in the State Championship.\n\nParticipated: 9th, 10th, 11th, 12th\nHours per week: 8-12"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/top"
                android:clipChildren="false"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/extra_interest_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic Interest"
                    android:textColor="@color/middle"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/programming_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_computer" />

                <TextView
                    android:id="@+id/programming_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/programming_icon"
                    android:layout_below="@id/extra_interest_label"
                    android:paddingTop="4dp"
                    android:text="Computer Programming"
                    android:textColor="#EE505050"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/programming_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/programming_primary"
                    android:layout_below="@id/programming_primary"
                    android:layout_marginEnd="8dp"
                    android:paddingBottom="8dp"
                    android:text="Since freshman year, computer programming has played a very significant role in my life. Discovering programming learning to mod a video game, it quickly became a passion of mine. Ever since then, I have always been pursuing computer programming in some way or another, moving from one form to another as my interests change. Recently, my ambitions have shifted to computer learning and artificial intelligence, and I hope to one day enter this field of study.\n\nParticipated: 9th, 10th, 11th, 12th\nHours per week: 5-12"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/top"
                android:clipChildren="false"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/extra_clubs_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clubs"
                    android:textColor="@color/middle"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/chess_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_knight" />

                <TextView
                    android:id="@+id/chess_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/extra_clubs_label"
                    android:layout_toEndOf="@id/chess_icon"
                    android:paddingTop="4dp"
                    android:text="Chess Club"
                    android:textColor="#EE505050"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/chess_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/chess_primary"
                    android:layout_below="@id/chess_primary"
                    android:layout_marginEnd="8dp"
                    android:paddingBottom="20dp"
                    android:text="Being taught by my dad at an early age, I have always enjoyed chess, even participating in a chess club in elementary school. I joined Chattahoochee's chess club my junior year and have always enjoyed it. The club permits both casual and competitive play, and every year a certain number of members are sent to a regional tournament where they represent the school.\n\nParticipated: 11th, 12th\nHours per week: 2-4\nLeadership position: Officer (12th Grade)"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/chess_secondary"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="80dp"
                    android:background="#8a000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/top"
                android:clipChildren="false"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/codes_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_programming" />

                <TextView
                    android:id="@+id/codes_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/codes_icon"
                    android:paddingTop="20dp"
                    android:text="Hooch Codes Club"
                    android:textColor="#EE505050"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/codes_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/codes_primary"
                    android:layout_below="@id/codes_primary"
                    android:layout_marginEnd="8dp"
                    android:paddingBottom="20dp"
                    android:text="Hooch Codes is a new club at Chattahoochee, being organized my senior year. Naturally, i was quick to join given my passion for coding. The club is positive space for like-minded students to come together and complete projects or help one another with preexisting projects.\n\nParticipated: 12th\nHours per week: 2-4"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#c5ae91"
                    android:layout_below="@id/codes_secondary"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>